<h3>Update Definition for<%= @word.name %></h3>

<form action="/words/<%= @word.id %>/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="body">Redefine</label>
  <input id="body" name="body" type="text">

  <button type="submit">Update</button>
</form>

<p><a href="/words">Return to word list</a></p>

<form action="/words/<%= @word.id %>/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>
