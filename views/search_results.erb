<h3>Search Results for "<%= params[:search] %>":</h3>
<% if @words.any? %>
  <ul>
    <% @words.each do |word| %>
      <li><a href="/words/<%= word.id %>"><%= word.name %></a></li>
  <% end %>
  </ul>
<% else %>
  <p>There are currently no words to display.</p>
<% end %>
<a href="/words">Return to word list</a>
