<div class="card">
  <div class="card-header">
    <h3 class="text-center">Words</h3>
  </div>
  <div class="card-body">
    <% if @words.any? %>
    <ul>
      <% @words.each do |word| %>
      <li><a href="/words/<%= word.id %>"><%= word.name.capitalize %></a></li>
      <% end %>
    </ul>
    <% else %>
    <p>There are currently no words to display.</p>
    <% end %>
    <a href="/words/new">Add a new word</a>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h3 class="text-center">Search</h3>
  </div>
  <div class="card-body">
    <form action="/words">
      <div class="form-group">
        <label for="search">Word to search</label>
        <input id="search" name="search" class="form-control" type="text">
      </div>
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
  </div>
</div>
